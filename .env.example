# OAuth2 / Auth
OAUTH2_ISSUER_URL=http://localhost:8080/auth/realms/dev
OAUTH2_REALM=dev
OAUTH2_CLIENT_ID=jwebmp-core-local
OAUTH2_CLIENT_SECRET=change-me
JWKS_URI=http://localhost:8080/auth/realms/dev/protocol/openid-connect/certs
INTROSPECTION_URL=http://localhost:8080/auth/realms/dev/protocol/openid-connect/token/introspect
AUTH_ADMIN_USER=admin
AUTH_ADMIN_PASS=admin

# Runtime
PORT=8080
ENVIRONMENT=dev
BASE_URL=http://localhost:8080
SERVICE_NAME=jwebmp-core
LOGGING_BACKEND=log4j2
ENABLE_DEBUG_LOGS=false
SKIP_INTEGRATION_TESTS=true

# Observability / Events
CLOUDEVENTS_FORMAT=application/cloudevents+json
CLOUDEVENTS_TRACE=true
TRACING_ENABLED=false
GCP_TRACE_EXPORT=false
METRICS_EXPORT=disabled

# Database (if applicable)
DB_URL=jdbc:postgresql://localhost:5432/jwebmp
DB_USER=jwebmp
DB_PASS=change-me
DB_POOL_SIZE=10

# Testing
TEST_DB_CONTAINER_IMAGE=postgres:16-alpine
